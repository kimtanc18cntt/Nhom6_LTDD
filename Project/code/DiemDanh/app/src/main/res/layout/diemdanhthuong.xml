<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/imSinhVien"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:src="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/txtTenSinhVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/imSinhVien"
        android:text="Tên sinh viên"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTenSinhVien"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/imSinhVien"
        android:text="Tên lớp"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtTenSinhVien"
        android:text="-" />
    <TextView
        android:id="@+id/txtMaSinhVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt"
        android:text="Mã sinh viên"
        android:textStyle="bold"/>
    <CheckBox
        android:id="@+id/cbDiemDanhThuong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="92dp"
        android:text="" />

</RelativeLayout>