<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imSinhVienDS"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:src="@drawable/ic_baseline_person_24" />

    <TextView
        android:id="@+id/txtTenSinhVienDS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/imSinhVienDS"
        android:text="Tên sinh viên"
        android:textColor="#0C34AC"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtLopDS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTenSinhVienDS"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/imSinhVienDS"
        android:text="Tên lớp"
        android:textColor="#AC0C0C"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txtTenSinhVienDS"
        android:text="-" />
    <TextView
        android:id="@+id/txtMaSinhVienDS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/txt"
        android:text="Mã sinh viên"
        android:textColor="#3A9F0E"
        android:textStyle="bold"/>
</RelativeLayout>