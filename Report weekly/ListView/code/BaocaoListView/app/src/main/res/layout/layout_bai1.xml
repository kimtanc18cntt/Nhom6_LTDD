<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bttrove"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/ic_baseline_keyboard_backspace_24"
        android:text=""

        />

    <EditText
        android:id="@+id/them"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Nhập vào"
        android:inputType="textPersonName"
        android:minHeight="48dp"
    />

    <Button
        android:id="@+id/btchon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm"
        android:layout_below="@+id/them"
        android:layout_marginLeft="50dp"/>

    <Button
        android:id="@+id/btcn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập nhập"
        android:layout_below="@+id/them"
        android:layout_toRightOf="@+id/btchon"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/btxoa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Xóa"
        android:layout_below="@+id/them"
        android:layout_toRightOf="@+id/btcn"
        android:layout_marginLeft="10dp"/>

    <ListView
        android:id="@+id/lvmonhoc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/btchon"
        android:layout_marginTop="20dp" />
</RelativeLayout>